

class Solution {
    public int search(int[] nums, int target) {
        int left=0,right=nums.length-1;
        while(left<=right){
            int mid=left+(right-left)/2;
            if(nums[mid]==target){        
                return mid;       # target==nums[mid]   so return its index
            }
            else if(nums[left] <= nums[mid] ){       #First search in left to mid 
                if(nums[left] <= target && target < nums[mid] ) {   #If target is found then return its index   otherwise check if mid to right
                    right=mid-1;
                }
                else{
                    left = mid+1;
                }
            }
            else{
                if(nums[mid] < target  && target <= nums[right] ){
                    left=mid+1;
                }
                else{
                    right=mid-1;
                }
            }
        }

        return -1;
    }
}
