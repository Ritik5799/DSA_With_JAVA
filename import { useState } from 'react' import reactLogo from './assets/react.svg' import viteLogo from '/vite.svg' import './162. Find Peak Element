#Peak Element is a element where its neighbour's are smaller than him.

class Solution {
    public int findPeakElement(int[] nums) {
        int left=0,right=nums.length-1;
        while(left<right){
            int mid=left+(right-left)/2;
            if(nums[mid]>nums[mid+1]) right=mid;      #if a element is greater than its next element then shoft right to mid
            else left=mid+1;      # Otherwise increase left to mid+1
        }
        return left;
    }
}
