#First we put all the even element in the Map and count its frequency

class Solution {
    public int mostFrequentEven(int[] nums) {
        Map<Integer, Integer> freq = new HashMap<>();
        
        for (int num : nums) {
            if (num % 2 == 0) {
                freq.put(num, freq.getOrDefault(num, 0) + 1);               #Putting the element in Map with its frequency
            }
        }
        
        if (freq.isEmpty()) return -1;        # if map does not have any element then it will return -1  no need to check further
        
        int ans = -1;
        int maxFreq = -1;
        
        for (Map.Entry<Integer, Integer> entry : freq.entrySet()) {
            int num = entry.getKey();   #Getting the number
            int count = entry.getValue();    # Getting the number's frequency
            
            if (count > maxFreq || (count == maxFreq && num < ans)) {       #checking which number has highest frequency and storing it
                ans = num;
                maxFreq = count;
            }
        }
        
        return ans;
    }
}
